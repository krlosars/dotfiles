# Certifica que configura√ß√µes padr√£o ser√£o incorporadas
$include /etc/inputrc

# Habilitando o modo VI para a linha de comando do bash
set editing-mode vi

# Insere o indicador do modo de edi√ß√£o VI no prompt:
set show-mode-in-prompt on

# Define marcadores para o indicador acima:
#set vi-ins-mode-string "(ins) "
#set vi-cmd-mode-string "(cmd) "

# Op√ß√£o 2: marcadores diferentes para cada
# um dos modos de edi√ß√£o, e tamb√©m para
# o console:
$if term=linux
	set vi-ins-mode-string "\1\e[?0c\2(ins) "
	set vi-cmd-mode-string "\1\e[?8c\2(cmd) "
$else
	set vi-ins-mode-string "\1\e[0 q\2Û±ÜÉ "
	set vi-cmd-mode-string "\1\e[4 q\2ÓüÖ "
$endif

# Movimenta√ß√£o r√°pida ("pular palavras") com control+setas
"\e[1;5D": backward-word
"\e[1;5C": forward-word

# Busca r√°pida por comandos no hist√≥rico do bash
$if mode=vi
	set keymap vi-command
		# these are for vi-command mode
		"\e[A": history-search-backward
		"\e[B": history-search-forward
		j: history-search-forward
		k: history-search-backward
	set keymap vi-insert
		# these are for vi-insert mode
		"\e[A": history-search-backward
		"\e[B": history-search-forward
$endif

# Melhorias no recurso de auto-completar do bash
set show-all-if-ambiguous on

# Mais melhorias para o recurso de auto-completar: cores
# Color files by types
# Note that this may cause completion text blink in some terminals (e.g. xterm).
set colored-stats On
# Append char to indicate type
set visible-stats On
# Mark symlinked directories
set mark-symlinked-directories On
# Color the common prefix
set colored-completion-prefix On
# Color the common prefix in menu-complete
set menu-complete-display-prefix On

# Modelo de Macro: imprime a palavra " # macro " e vai para o final-da-linha
# quando a combina√ß√£o de teclas ALT + "l" ("ele") √© pressionada. Serve como
# exemplo de como criar macros para inser√ß√£o de texto.
# EXEMPLO --> "\ew": "\C-e # macro"

# Macro para limpar a tela com ctrl+l ("ele") no modo de inser√ß√£o.
"\C-l": "i"

# Macro para retornar ao diret√≥rio do usu√°rio ($HOME)
"\C-h": "cd ~"

# Macro para corrigir "]<return>"
"]": ""

# Pequeno ajuste para quando da inser√ß√£o
# de texto copiado da √°rea de transfer√™ncia.
set enable-bracketed-paste on

# Pequeno ajuste necess√°rio ao terminal "st".
